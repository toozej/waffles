# Waffles Application Configuration
# Core Settings
WAFFLES_DEFAULT_MODEL=claude-4-sonnet
WAFFLES_DEFAULT_PROVIDER=anthropic
WAFFLES_LOG_DB_PATH=./llm-logs.sqlite
WAFFLES_CONFIG_PATH=.waffles.env

# Tool Arguments (customize for your workflow)
WHERESMYPROMPT_ARGS=--exclude-patterns="*.log,*.tmp,node_modules/*,vendor/*,.git/*"
FILES2PROMPT_ARGS=--exclude-patterns="*.log,*.tmp,node_modules/*,vendor/*,.git/*"
LLM_ARGS=--model claude-4-sonnet --system "You are a helpful coding assistant."

# Behavior Settings
WAFFLES_VERBOSE=false
WAFFLES_QUIET=false
WAFFLES_AUTO_INSTALL=true
WAFFLES_IGNORE_GITIGNORE=false

# Language and Pattern Overrides (leave empty to use auto-detection)
WAFFLES_LANGUAGE=
WAFFLES_INCLUDE_PATTERNS=
WAFFLES_EXCLUDE_PATTERNS=

